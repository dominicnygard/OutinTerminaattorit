[MASTER]

init-hook='import sys; sys.path.append("src")'

ignore-paths=src/tests,src/input_validation.py
ignore=single_file_to_ignore.py

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring

[FORMAT]

[REFACTORING]

[DESIGN]

[CLASSES]

exclude-protected=_mapping